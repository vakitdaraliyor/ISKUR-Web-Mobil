    <!-- Expander icindeki elemanlari gizleyip gostermeye yarayan yapidir 
    <Grid>
        <Expander Header="Onemli buttonlar">
            <StackPanel>
                <Button>Button1</Button>
                <Button>Button1</Button>
                <Button>Button1</Button>
            </StackPanel>
        </Expander>
    </Grid>
    -->

    <!-- Listbox icerisinde bir ya da birden fazla elemani tutup gostermeye yarayan bir yapidir
    Icerisindeki elemanlardan birini secmeyi saglar -->
    <StackPanel>

        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Eleman 1" InputGestureText="Alt+N">
                    <MenuItem.Icon>
                        <Image Source="resimler/titanic.jpg"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Eleman 2" InputGestureText="Alt+O"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help"></MenuItem>
        </Menu>

        <ListBox Name="listbox1" SelectionMode="Multiple">
            <ListBoxItem>Osman</ListBoxItem>
            <ListBoxItem>Ramazan</ListBoxItem>
            <ListBoxItem>Mustafa</ListBoxItem>
            <ListBoxItem>Soner</ListBoxItem>
        </ListBox>
        <Button Style="{StaticResource buttonStill}" ToolTip="ListBox ToolTip" Click="Button_Click_1">Listbox tan eleman sec</Button>

        <ComboBox Name="combobox1" Margin="10" IsEditable="True">
            <ComboBoxItem>Kırmızı</ComboBoxItem>
            <ComboBoxItem>Beyaz</ComboBoxItem>
            <ComboBoxItem>Sarı</ComboBoxItem>
        </ComboBox>

        <Button Click="Button_Click_2">Combo dan eleman sec</Button>

        <!-- BINDING (VERI BAGLAMA)-->
        <Label Name="displayText" Margin="5" FontSize="20"
               FontFamily="{Binding ElementName=FontFamilyCombo, Path=Text}"
               FontWeight="{Binding ElementName=FontWeightCombo, Path=Text}"
               >My Text</Label>

        <ComboBox Name="FontFamilyCombo" Margin="5">
            <ComboBoxItem>Courier New</ComboBoxItem>
            <ComboBoxItem>Times New Roman</ComboBoxItem>
        </ComboBox>

        <ComboBox Name="FontWeightCombo" Margin="5">
            <ComboBoxItem>Heavy</ComboBoxItem>
            <ComboBoxItem>Bold</ComboBoxItem>
            <ComboBoxItem>Light</ComboBoxItem>
        </ComboBox>
        
        <!-- EVENTS -->
        <Button Name="clickButton" MouseEnter="Button_mouse_enter" MouseLeave="Button_mouse_leave" Click="Button_event_click">Click Me</Button>

        <StatusBar Margin="5">
            <TextBlock>Islem devam ediyor</TextBlock>
            <ProgressBar Width="100" Height="20" Value="65"></ProgressBar>
        </StatusBar>

    </StackPanel> 
    
</Window>
